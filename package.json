{
  "name": "design-system-monorepo",
  "description": "A React based design system monorepo providing building blocks to compose components and UIs",
  "author": "lmolinar",
  "repository": {
    "type": "github",
    "url": "https://github.com/lmolinar/design-system-monorepo"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "yarn build:css",
    "build:css": "yarn gulp css:build",
    "build:css:watch": "yarn gulp css:build:watch",
    "lint": "yarn lint:eslint && yarn lint:style",
    "lint:eslint": "eslint --max-warnings 0 packages --ext .tsx --ext .ts",
    "lint:style": "stylelint \"packages/**/*.scss\""
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "!packages/Styles"
    ]
  },
  "devDependencies": {
    "@csstools/postcss-sass": "^5.1.1",
    "@lok/styles": "./packages/Styles",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "gulp": "^5.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-postcss": "^10.0.0",
    "gulp-rename": "^2.0.0",
    "inter-ui": "^4.1.0",
    "postcss": "^8.4.49",
    "postcss-csso": "^6.0.1",
    "postcss-discard-comments": "^7.0.3",
    "postcss-preset-env": "^10.1.1",
    "prettier": "^3.4.1",
    "react": "^18.3.1",
    "stylelint": "^16.11.0",
    "stylelint-prettier": "^5.0.2",
    "typescript": "^5.7.2"
  }
}
